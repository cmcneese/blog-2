<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css?family=Dosis:300,400,500" rel="stylesheet">
    <link rel="stylesheet" href="/dist/app.css" media="screen" title="no title">
    <meta charset="utf-8">
    <title>Welcome to Ribbeter!</title>
  </head>
  <body>
    <nav class="nav-bar">
      <h1>Ribbeter</h1>
      <div class="container">
        <ul class="container__nav">
          <li>
            <a class="nav__link" href="/">Ribbets</a>
          </li>
          <li>
            <a class="nav__link" href="/">Frogs</a>
          </li>
          <li>
            <a class="nav__link" href="/">Login</a>
          </li>
        </ul>
      </div>
    </nav>

    {% if old('error') %}
      <div class="error alert">
        <p class="animated bounce">
          {{ old('error') }}
        </p>
      </div>

    {% endif %}

    {% if old('success') %}
      <div class="error alert">
        <p class="animated bounce">{{ old('success') }}</p>
      </div>

    {% endif %}

    {% block content %}{% endblock %}

    <script src="/dist/app.js" type="text/javascript"></script>

  </body>
</html>
